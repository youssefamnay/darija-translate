{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.0",
  "description": "Traduire le texte sélectionné avec le service darija-translator-service et afficher la traduction sur le côté droit.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Traduire en Darija"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}